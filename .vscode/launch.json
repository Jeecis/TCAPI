{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "program": "app/app.py",  // Entry point of your Flask app
            "args": [
                "run",
                "--host=127.0.0.1",
                "--port=5000"
            ],
            "env": {
                "REDIS_USER_PORT": "6379",
                "REDIS_USER_HOST": "127.0.0.1",
                
                "REDIS_BOOKING_PORT": "6380",
                "REDIS_BOOKING_HOST": "127.0.0.1",
                
                "REDIS_INV_PORT": "6381",
                "REDIS_INV_HOST": "127.0.0.1",
            },
            "console": "integratedTerminal"
        }
    ]
}